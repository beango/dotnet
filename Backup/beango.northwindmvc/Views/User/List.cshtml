@model IEnumerable<beango.model.User>
@{
    ViewBag.Title = "List";
}
<h2 style="float: left;">
    List</h2>
<p style="position: relative; height: 36px;">
    @Html.ActionLink("Create New", "Create", null, new { style = "position:absolute; margin-left:10px; bottom:6px;" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            UserID
        </th>
        <th>
            UserName
        </th>
        <th>
            UserPwd
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPwd)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) |
                @Html.ActionLink("UserRoles", "UserRoleList", "UserRole", new { userid = item.UserID }, null)
                |
                @Html.ActionLink("Details", "Details", new { id = item.UserID }) | <a onclick="return deleteRow(@item.UserID)" href="#">
                    Delete</a>
            </td>
        </tr>
    }
</table>
<script language="javascript">
    function deleteRow(id) {
        if (confirm("确认要删除该记录吗？")) {
            $.post("/User/Delete/" + id, function (res) {
                alert(res);
                location.href = location.href;
            });
        }
    }
</script>
