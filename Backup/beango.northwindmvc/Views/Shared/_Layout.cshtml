@using beango.northwindmvc
@{
    var UserState = ViewData["UserState"] as IUserState;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Skin/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Skin/bootstrap/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Skin/bootstrap/css/docs.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body data-spy="scroll" data-target=".subnav" data-offset="50">
    <div class="container">
        <header class="jumbotron subhead" id="overview">
            <div class="subnav subnav-fixed">
                <ul class="nav nav-pills">
                    <li><a href="../../User/List"><i class="icon-user"></i>用户管理</a></li>
                    <li><a href="../../Role/List"><i class="icon-book"></i>角色管理</a></li>
                    <li><a href="../../Auth/List"><i class="icon-book"></i>权限管理</a></li>
                    <li><a href="../../Product/List"><i class="icon-th-list"></i>产品管理</a></li>
                    <li>@Html.Raw(UserState != null ? "<a href=\"#\"><i class=\"icon-info-sign\"></i>" + UserState.UserName + "</a>" : "")</li>
                    <li>@Html.Raw(UserState != null ? "<a href=\"/User/Logout\">注销</a>" : "")</li>
                </ul>
            </div>
        </header>
        <section id="list">
        @RenderBody()
        </section>
    </div>
    <!-- /container -->
</body>
</html>
