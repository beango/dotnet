@model beango.model.Products
@{
    ViewBag.Title = "Edit";
}
<h2 style="float: left;">
    Edit Products</h2>
<p style="position: relative; height: 36px;">
    @Html.ActionLink("Back to List", "List", null, new { style = "position:absolute; margin-left:10px; bottom:6px;" })
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
<script type="text/javascript">
    // wait for the DOM to be loaded
    $(document).ready(function () {
        var ajaxProjectImageListOptions = {
            dataType: 'json',
            success: function (result) {
                alert(result.Text);
                location.href = "/Product/List";
            }
        };
        $('form').ajaxForm(ajaxProjectImageListOptions);
    }); 
</script>
@using (Html.BeginForm("Edit", "Product", null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <div class="control-group">
        @Html.HiddenFor(model => model.ProductID)
        <div class="control-label">
            @Html.LabelFor(model => model.ProductName)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.ProductName, new { @class = "input-xlarge" })
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.SupplierID)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.SupplierID)
            @Html.ValidationMessageFor(model => model.SupplierID)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.CategoryID)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.CategoryID)
            @Html.ValidationMessageFor(model => model.CategoryID)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.QuantityPerUnit)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.QuantityPerUnit)
            @Html.ValidationMessageFor(model => model.QuantityPerUnit)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.UnitPrice)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.UnitPrice)
            @Html.ValidationMessageFor(model => model.UnitPrice)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.UnitsInStock)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.UnitsInStock)
            @Html.ValidationMessageFor(model => model.UnitsInStock)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.UnitsOnOrder)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.UnitsOnOrder)
            @Html.ValidationMessageFor(model => model.UnitsOnOrder)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.ReorderLevel)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.ReorderLevel)
            @Html.ValidationMessageFor(model => model.ReorderLevel)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.Discontinued)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.Discontinued)
            @Html.ValidationMessageFor(model => model.Discontinued)
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            保存更改</button>
        <button class="btn" onclick="location.href='/Product/List';return false;">
            取消</button>
    </div>
    
    
}
