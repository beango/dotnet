@model beango.model.User
@{
    ViewBag.Title = "Edit";
}
<h2 style="float: left;">
    Edit UserInfo</h2>
<p style="position: relative; height: 36px;">
    @Html.ActionLink("Back to List", "List", null, new { style = "position:absolute; margin-left:10px; bottom:6px;" })
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
<script type="text/javascript">
    // wait for the DOM to be loaded
    $(document).ready(function () {
        var ajaxProjectImageListOptions = {
            dataType: 'json',
            success: function (result) {
                alert(result.Text);
                location.href = "/User/List";
            }
        };
        $('form').ajaxForm(ajaxProjectImageListOptions);
    }); 
</script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.UserID)

    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>
    </div>
    <div class="control-group">
        <div class="control-label">
            @Html.LabelFor(model => model.UserPwd)
        </div>
        <div class="controls">
            @Html.EditorFor(model => model.UserPwd)
            @Html.ValidationMessageFor(model => model.UserPwd)
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            保存更改</button>
        <button class="btn" onclick="location.href='/';return false;">
            取消</button>
    </div>
}
