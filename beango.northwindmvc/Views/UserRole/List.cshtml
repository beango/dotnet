@model IEnumerable<beango.model.UserRole>

@{
    ViewBag.Title = "Auth";
}

<h2 style="float: left;">Auth</h2>
<p style="position: relative; height: 36px;">
    @Html.ActionLink("Create New", "Create", new { userid = HttpContext.Current.Request.QueryString["userid"] }, new { style = "position:absolute; margin-left:10px; bottom:6px;" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            UserName
        </th>
        <th>
            RoleName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.seqNo }) |
            @Html.ActionLink("Details", "Details", new { id = item.seqNo }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.seqNo })
        </td>
    </tr>
}

</table>
