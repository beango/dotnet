# You can configure your scheduler in either <quartz> configuration section
# or in quartz properties file
# Configuration section has precedence

quartz.scheduler.instanceName = ServerScheduler

# configure thread pool info
quartz.threadPool.type = beango.quartz.Simpl.SimpleThreadPool, beango.quartz
quartz.threadPool.threadCount = 1
quartz.threadPool.threadPriority = Normal

# job initialization plugin handles our xml reading, without it defaults are used
quartz.plugin.xml.type = beango.quartz.Plugin.Xml.XMLSchedulingDataProcessorPlugin, beango.quartz
quartz.plugin.xml.fileNames = ~/quartz_jobs.xml

# export this server to remoting context
quartz.scheduler.exporter.type = beango.quartz.Simpl.RemotingSchedulerExporter, beango.quartz
quartz.scheduler.exporter.port = 555
quartz.scheduler.exporter.bindName = beango.quartzScheduler
quartz.scheduler.exporter.channelType = tcp
quartz.scheduler.exporter.channelName = httpbeango.quartz